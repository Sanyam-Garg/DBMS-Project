<html lang="en">
<head>
    <title>Drago Cinemas</title>

    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav">
            <img src="Images/logo.webp" class="brand-logo" alt="">
            <div class="nav-items">
                <a href="/movies">Drago Cinemas</a>
            </div>
        </div>
    </nav>

    <section class="product">
        <h2 class="product-category">recommended movies</h2>
    </section>
    <button class="pre-btn"><img src="Images/arrow.webp" alt=""></button>
    <button class="nxt-btn"><img src="Images/arrow.webp" alt=""></button>
    
    <div class="product-container">

    <% movies.forEach((item) => {
        %>
        <div class="product-card">
            <div class="product-image">
                <img src="<%=item['poster']%>" class="product-thumb" alt="">

                <a href="/movies/<%=item['movie_id']%>"><button class="card-btn">book now</button></a>
            </div>
            <div class="product-info">
                <h2 class="product-brand"><%=item['title']%></h2>
                <p class="product-short-des">a short line about the cloth..</p>
            </div>
        </div>
        <%
    }) %>
    </div>

    <script src="js/index.js"></script>
</body>
</html>