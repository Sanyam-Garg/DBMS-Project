<html lang="en">
<head>
    <title>Shows</title>

    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/shows.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav">
            <img src="/Images/logo.webp" class="brand-logo" alt="">
            <div class="nav-items">
                <a href="index.html">Drago Cinemas</a>
            </div>
        </div>
    </nav>
    <div class="shows-container">
        <div class="show-card">
            <div class="theatre-name">
                <h3><%=shows[0]['title']%></h3>
            </div>
            <div class="timings">
                <%shows['shows'].forEach(item => {
                    %>
                        <a href="/movies/<%=item['movie_id']%>/<%=item['showId']%>"><button type="submit" class="btn-timings"><p><%=item['start_time']%></p></button>
                    <%
                })%>
            </div>
        </div>
    </div>
</body>
</html> 